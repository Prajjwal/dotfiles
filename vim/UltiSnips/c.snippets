snippet m "main"
int main (${1:int argc, const char* argv[]})
{
	${0}
	return 0;
}
endsnippet

snippet mn "main"
int main (void)
{
	${0}
	return 0;
}
endsnippet

snippet incc
#include <${1:stdio.h}>
endsnippet

snippet if "if"
if (${1:/* condition */}) {
	${0}
}
endsnippet

snippet el "else"
else {
	${0}
}
endsnippet

snippet f "function"
${1:int} ${2:myfunction} (${3})
{
	${0}
}
endsnippet

snippet phile "file handler"
FILE *${1:f} = fopen ("${2}", "${3:r}");
${4:/* code */}
fclose (f);
endsnippet

snippet wh "while loop"
while (${1:1}) {
	${2:/* code */}
}
endsnippet

snippet for "for loop"
for (${1:i} = ${2:0}; $1 < ${3:10}; ${4:++}$1) {
	${5:/* code */}
}
endsnippet

snippet ifdef "single definition constants"
#ifndef $1
#define ${1:CONSTANT} ${2:VALUE}
#endif
endsnippet

snippet val
ruby_debug_print_value(0, 1, "${1:value}", $1);
endsnippet
