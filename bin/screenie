#!/bin/sh

# Share a screenshot on Dropbox.

# Requirements:
# gnome-screenshot

# Usage:
# screenie <filename>
#
# <filename> is optional, will use <timestamp>.png if not specified.

if hash gnome-screenshot 2> /dev/null; then
	filename="`date +%s`"
	[ -n "$1" ] && filename="$1"

	filename="/tmp/$filename.png"

	gnome-screenshot --area --file=$filename &&
	boxdrop $filename
else
	echo "gnome-screenshot not installed"
	exit 1
fi
